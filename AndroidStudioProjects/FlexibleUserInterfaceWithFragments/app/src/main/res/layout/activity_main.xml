    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a3teesystem.flexibleuserinterfacewithfragments.MainActivity">


    <fragment
        android:id="@+id/fragment"
        android:name="com.example.a3teesystem.flexibleuserinterfacewithfragments.FragmentA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="17dp" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.a3teesystem.flexibleuserinterfacewithfragments.FragmentB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fragment"
        android:layout_below="@+id/fragment"
        android:layout_marginTop="11dp" />
